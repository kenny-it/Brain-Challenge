<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/pt_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="TIME : 0"
        android:textColor="#FF0000"
        android:textSize="20sp" />

    <LinearLayout
        android:id = "@+id/pt_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/pt_ib_00x00"
            android:layout_width="134dp"
            android:layout_height="95dp"
            android:onClick="onClick"
            android:padding="0dp"
            android:src="@drawable/blackholezero" />

        <ImageButton
            android:id="@+id/pt_ib_00x01"
            android:layout_width="134dp"
            android:layout_height="95dp"
            android:onClick="onClick"
            android:padding="0dp"
            android:src="@drawable/blackholeone" />

        <ImageButton
            android:id="@+id/pt_ib_00x02"
            android:layout_width="134dp"
            android:layout_height="95dp"
            android:onClick="onClick"
            android:padding="0dp"
            android:src="@drawable/blackholetwo" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/pt_line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <ImageButton
            android:id="@+id/pt_ib_01x00"
            android:layout_width="134dp"
            android:layout_height="95dp"
            android:src="@drawable/blackholethree"
            android:padding="0dp"
            android:onClick="onClick"/>
        <ImageButton
            android:id="@+id/pt_ib_01x01"
            android:layout_width="134dp"
            android:layout_height="95dp"
            android:src="@drawable/blackholefour"
            android:padding="0dp"
            android:onClick="onClick"/>
        <ImageButton
            android:id="@+id/pt_ib_01x02"
            android:layout_width="134dp"
            android:layout_height="95dp"
            android:src="@drawable/blackholefive"
            android:padding="0dp"
            android:onClick="onClick"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/pt_line3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <ImageButton
            android:id="@+id/pt_ib_02x00"
            android:layout_width="134dp"
            android:layout_height="95dp"
            android:src="@drawable/blackholesix"
            android:padding="0dp"
            android:onClick="onClick"/>
        <ImageButton
            android:id="@+id/pt_ib_02x01"
            android:layout_width="134dp"
            android:layout_height="95dp"
            android:src="@drawable/blackholeseven"
            android:padding="0dp"
            android:onClick="onClick"/>
        <ImageButton
            android:id="@+id/pt_ib_02x02"
            android:layout_width="134dp"
            android:layout_height="95dp"
            android:src="@drawable/blackholeeight"
            android:padding="0dp"
            android:onClick="onClick"
            />
    </LinearLayout>


    <Button
        android:id="@+id/pt_btn_restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="restart"
        android:layout_gravity="center"
        android:text="Return"
        android:layout_marginTop="20dp"
        style="?attr/materialButtonOutlinedStyle"/>
    <ImageView
        android:id="@+id/pt_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/blackhole"
        android:layout_marginTop="20dp"/>





</LinearLayout>