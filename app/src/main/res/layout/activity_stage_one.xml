<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".stageOne.StageOneActivity">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:background="@null"
        android:src="@drawable/back" />

    <Chronometer
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:layout_centerHorizontal="true"  />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="99dp"
        android:text="Stage No.1"
        android:textAlignment="center"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:textSize="26sp"
        android:text="Spot the differences!" />

    <ImageView
        android:id="@+id/left_blue_dragon"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/instruction"
        app:srcCompat="@drawable/blue_dragon1" />

    <ImageView
        android:id="@+id/right_blue_dragon"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/instruction"
        app:srcCompat="@drawable/blue_dragon2" />

    <ImageView
        android:id="@+id/grey_dragon"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/instruction"
        app:srcCompat="@drawable/grey_dragon" />

    <ImageView
        android:id="@+id/circle_left_horn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/instruction"
        android:layout_marginTop="85dp"
        android:layout_marginStart="140dp"
        app:srcCompat="@drawable/circle" />

    <ImageView
        android:id="@+id/circle_right_horn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/instruction"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="30dp"
        app:srcCompat="@drawable/circle" />

    <ImageView
        android:id="@+id/circle_left_teeth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/instruction"
        android:layout_marginTop="190dp"
        android:layout_marginStart="150dp"
        app:srcCompat="@drawable/circle" />

    <ImageView
        android:id="@+id/circle_right_teeth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/instruction"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="20dp"
        app:srcCompat="@drawable/circle" />

    <ImageView
        android:id="@+id/circle_left_tail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/instruction"
        android:layout_marginTop="370dp"
        android:layout_marginStart="0dp"
        app:srcCompat="@drawable/circle" />

    <ImageView
        android:id="@+id/circle_right_tail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/instruction"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="370dp"
        android:layout_marginEnd="170dp"
        app:srcCompat="@drawable/circle" />

</RelativeLayout>